@model MdoTestKrv.Models.Empl.EmplDetails

@using (Html.BeginForm())
{        
    <div class="form-horizontal">
        <h4>@ViewBag.Title</h4>
        <hr />
            
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FirstName, htmlAttributes: new { @class = "form-control", @readonly = "readonly"} )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MiddleName, htmlAttributes: new { @class = "form-control", @readonly = "readonly"} )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LastName, htmlAttributes: new { @class = "form-control", @readonly = "readonly"} )
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.BirthYear, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BirthYear, htmlAttributes: new { @class = "form-control", @readonly = "readonly"} )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, htmlAttributes: new { @class = "form-control", @readonly = "readonly"} )
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Удалить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
    
<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>
